<%# Railsy-er Forms with #form_with %>

<%= form_with model: @user do |f| %>
  <%= f.label :username, "Username" %>
  <%= f.text_field :username, :value => "Keep it snappy" %> <br>
  <%= f.label :email, "E-mail" %>
  <%= f.email_field :email, :value => "that@that.com" %> <br>
  <%= f.label :password, "Password" %>
  <%= f.password_field :password %> <br>
  <%= f.submit %>
<% end %>

<h3>User list</h3>
<% list = User.all%>

<% list.each do |u| %>
  <ul>
    <li> ID: <%= u.id%> - <%= u.username %> - <%= u.email %></li>
  </ul>  
<% end %>

