<h3>Edit an existing user!</h3>

<%= form_with model: @user do |f| %>
  <%= f.label :username, "Username" %>
  <%= f.text_field :username %> <br>
  <%= f.label :email, "E-mail" %>
  <%= f.email_field :email %> <br>
  <%= f.label :password, "Password" %>
  <%= f.password_field :password %> <br>
  <%= f.submit %>
<% end %>